<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AlarmAPK" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="myBtnViewColor" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">

        <item name="android:color">
            #004A77
        </item>
    </style>
    <style name="MyCustomTimePicker" parent="ThemeOverlay.MaterialComponents.TimePicker">

        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnPrimaryContainer">@color/time_picker_hand_color</item>
        <item name="clockNumberTextColor">@color/white</item>
        <item name="borderlessButtonStyle">@style/borderlessButtonStyle</item>

    </style>

    <style name="borderlessButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">#92add6</item>
    </style>

    <style name="RoundStyle" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Round" parent="">
        <item name="cornerSize">50%</item>
    </style>
</resources>